{
    "compilerOptions": {
        "outDir": "app/dist/js",
        "target": "ES6",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "paths": {
            "*": [ "node_modules/@types/*", "*"]
        },
    },
    "include": ["app/src/**/*"]
}